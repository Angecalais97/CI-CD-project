pipeline {
    agent any
    
    environment {
        SONAR_SCANNER_OPTS = '-Dsonar.projectKey=CI-CD-project -Dsonar.projectName=CI-CD-Project -Dsonar.host.url=https://sonarqube.devopseasylearning.uk -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.cache.directory=/tmp/.sonar'
    }
    
    stages {
        stage('Cloning') {
            steps {
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/Angecalais97/CI-CD-project'
            }
        }

        stage('Maven Package') {
            steps {
                sh 'mvn clean package -Dmaven.repo.local=/tmp/target'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    docker.image('sonarsource/sonar-scanner-cli:latest').inside {
                        sh 'sonar-scanner -X'
                    }
                }
            }
        }
    }
}
